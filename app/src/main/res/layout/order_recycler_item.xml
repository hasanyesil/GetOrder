<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/productTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto_medium"
        android:textAllCaps="true"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/decreaseImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/productCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/roboto_medium"
        android:text="X5"
        android:textAllCaps="true"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/increaseImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/diveder"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/diveder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productCountTextView" />

    <ImageView
        android:id="@+id/increaseImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_add_circle_outline_black"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/productCountTextView"
        app:layout_constraintEnd_toStartOf="@+id/order_price_textview"
        app:layout_constraintTop_toTopOf="@+id/productCountTextView" />

    <ImageView
        android:id="@+id/decreaseImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/ic_remove_circle_outline_black"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/productCountTextView"
        app:layout_constraintEnd_toStartOf="@+id/productCountTextView"
        app:layout_constraintTop_toTopOf="@+id/productCountTextView" />

    <TextView
        android:id="@+id/order_price_textview"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/increaseImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/increaseImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>