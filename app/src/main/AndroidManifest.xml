<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greenrock.getorder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.AddProductActivity"></activity>
        <activity android:name=".ui.activity.ProductDetailActivity" />
        <activity android:name=".ui.activity.AddWorkerActivity" />
        <activity android:name=".ui.activity.WorkerDetailsActivity" />
        <activity android:name=".ui.activity.OldChecksActivity" />
        <activity android:name=".ui.activity.ProductsActivity" />
        <activity android:name=".ui.activity.WorkersActivity" />
        <activity android:name=".ui.activity.CheckActivity" />
        <activity android:name=".ui.activity.CashierActivity" />
        <activity android:name=".ui.activity.SearchActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.OrderActivity" />
        <activity android:name=".ui.activity.AdminActivity" />
        <activity android:name=".ui.activity.WaiterActivity" />
        <activity android:name=".ui.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>